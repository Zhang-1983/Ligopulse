# LingoPulse Backend Environment Configuration
# LingoPulse 后端环境配置

# Application Settings
APP_NAME="LingoPulse Backend"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///./lingopulse.db
REDIS_URL=redis://localhost:6379

# PostgreSQL (if using PostgreSQL instead of SQLite)
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_USER=lingopulse
POSTGRESQL_PASSWORD=your_password_here
POSTGRESQL_DATABASE=lingopulse

# # Wenxin (Baidu) Configuration
# WENXIN_API_KEY=your_wenxin_api_key_here
# WENXIN_SECRET_KEY=your_wenxin_secret_key_here
# WENXIN_BASE_URL=https://aip.baidubce.com
# WENXIN_MODEL=ernie-bot

# Paddle (飞桨) Platform Configuration
PADDLE_ACCESS_TOKEN=
PADDLE_BASE_URL=https://aistudio.baidu.com/llm/lmapi/v3
PADDLE_MODEL_NAME=ERNIE-4.5-21B-A3B-Thinking
PADDLE_TEMPERATURE=0.7
PADDLE_MAX_TOKENS=1000

# Baidu AI Studio Configuration
BAIDU_ACCESS_TOKEN=

# Local Model Configuration
LOCAL_MODEL_PATH=./models
LOCAL_MODEL_NAME=chinese-chatglm-6b
LOCAL_MODEL_DEVICE=cuda
ENABLE_LOCAL_MODELS=true

# Security Settings
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:5174","http://127.0.0.1:3000","http://127.0.0.1:5173","http://127.0.0.1:5174"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Analysis Configuration
MAX_CONVERSATION_LENGTH=10000
ANALYSIS_TIMEOUT=300
BATCH_ANALYSIS_LIMIT=100

# Cache Settings
CACHE_TTL=1800
ENABLE_CACHING=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# File Storage Settings
UPLOAD_DIR=./uploads
REPORT_DIR=./reports
MAX_FILE_SIZE=52428800

# Admin API Key (optional)
ADMIN_API_KEY=your_admin_api_key_here
